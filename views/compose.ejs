<%- include("partials/header") -%>

<div style="color:#1abc9c; padding-bottom: 3%; text-align:center">
  <h1>Compose</h1>
</div>
<form class="" action="/compose" method="post" style="padding-left:10%; padding-right:10%;">
  <div class="form-group" >
    <label for="title" style="color:grey; font-size: 1.6rem;">Title</label>
    <input type="text"  class="form-control" name="postTitle">
  </div>
  <div class="form-group">
    <label for="text" style="color:grey; font-size: 1.6rem;">Post</label>
    <textarea class="form-control" name="postBody" cols="40" rows="5"></textarea>
  </div>
  <button type="submit" class="btn" style="color:#1abc9c;">Publish</button>

</form>


<%- include("partials/footer") -%>
